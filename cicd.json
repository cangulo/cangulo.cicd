{
  "$schema": "./cicd.schema.json",
  "dotnetTargets": {
    "solutionPath": "./nuget_test/src/cangulo.changelog.sln"
  },
  "versioning": {
    "currentVersion": "0.0.20"
  },
  "gitTargets": {
    "email": "carlos.angulo.mascarell@outlook.com",
    "name": "cangulo.cicd"
  },
  "changelogSettings": {
    "commitsMode": "conventionalCommits",
    "conventionalCommitsSettings": {
      "types": [
        "patch",
        "minor",
        "major"
      ]
    }
  },
  "nugetSettings": {
    "packNugetSettings": {
      "projectPath": "./nuget_test/src/cangulo.changelog/cangulo.changelog.csproj",
      "outputDirectory": "./nugets"
    },
    "pushNugetsSettings": {
      "nugetsDirectory": "./nugets",
      "apiKeyRequired": true,
      "source": "https://api.nuget.org/v3/index.json"
    }
  }
}