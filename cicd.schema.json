{
  "definitions": {},
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/object1629576015.json",
  "title": "Root",
  "type": "object",
  "required": [],
  "properties": {
    "$schema": {
      "$id": "#root/schema",
      "title": "JSON Schema",
      "description": "JSON schema from the cangulo.cicd definition",
      "type": "string",
      "default": "./cicd.schema.json",
      "examples": [
        "./cicd.schema.json"
      ],
      "pattern": "^.*cicd.schema.json$"
    },
    "dotnetTargets": {
      "$id": "#root/dotnetTargets",
      "title": "Dotnet Targets",
      "type": "object",
      "required": [
        "solutionPath"
      ],
      "properties": {
        "solutionPath": {
          "$id": "#root/solutionPath",
          "title": "Solution Path",
          "description": "path to the .sln file",
          "type": "string",
          "default": "",
          "examples": [
            "./cangulo.cicd.sln"
          ],
          "pattern": "^.*.sln$"
        },
        "dotnetPublish": {
          "$id": "#root/dotnetPublish",
          "title": "Dotnet Publish",
          "type": "object",
          "required": [
            "projectPath",
            "outputFolder",
            "runTime"
          ],
          "properties": {
            "projectPath": {
              "$id": "#root/dotnetPublish/projectPath",
              "title": "Project Path",
              "type": "string",
              "default": "",
              "examples": [
                "./src/cangulo.cicd/cangulo.cicd.csproj"
              ],
              "pattern": "^.*.csproj$"
            },
            "outputFolder": {
              "$id": "#root/dotnetPublish/outputFolder",
              "title": "Output Folder",
              "type": "string",
              "default": "",
              "examples": [
                "./artifacts/cangulo.cicd"
              ],
              "pattern": "^.*$"
            },
            "runTime": {
              "$id": "#root/dotnetPublish/runTime",
              "title": "Runtime",
              "type": "string",
              "enum": [
                "linux-x64"
              ],
              "pattern": "^.*$"
            }
          }
        }
      }
    },
    "compressDirectory": {
      "$id": "#root/compressDirectory",
      "title": "Compress Directory",
      "type": "object",
      "required": [
        "path",
        "outputFileName"
      ],
      "properties": {
        "path": {
          "$id": "#root/compressDirectory/path",
          "title": "Path",
          "type": "string",
          "default": "",
          "examples": [
            "./artifacts/cangulo.cicd"
          ],
          "pattern": "^.*$"
        },
        "outputFileName": {
          "$id": "#root/compressDirectory/outputFileName",
          "title": "Output Filename",
          "type": "string",
          "default": "",
          "examples": [
            "./releaseAssets/cangulo.cicd-linux-x64.zip"
          ],
          "pattern": "^.*\\.zip$"
        }
      }
    },
    "versioning": {
      "$id": "#root/versioning",
      "title": "Versioning Settings",
      "type": "object",
      "required": [
        "currentVersion",
        "releaseAssets"
      ],
      "properties": {
        "currentVersion": {
          "$id": "#root/versioning/currentVersion",
          "title": "Current Version",
          "description": "Current Version of the project following semantic versioning. It also allow to add prefix version as",
          "type": "string",
          "default": "",
          "examples": [
            "0.0.2",
            "0.0.2-beta",
            "0.0.2-alpha"
          ],
          "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+.*$"
        },
        "releaseAssets": {
          "$id": "#root/versioning/releaseAssets",
          "title": "Release Assets",
          "type": "array",
          "default": [],
          "items": {
            "$id": "#root/versioning/releaseAssets/items",
            "title": "Items",
            "type": "string",
            "default": "",
            "examples": [
              "./releaseAssets/cangulo.cicd-linux-x64.zip"
            ],
            "pattern": "^.*$"
          }
        }
      }
    },
    "gitTargets": {
      "$id": "#root/gitTargets",
      "title": "Git Pipeline Settings",
      "type": "object",
      "required": [
        "email",
        "name"
      ],
      "properties": {
        "email": {
          "$id": "#root/gitTargets/email",
          "title": "Email",
          "type": "string",
          "default": "",
          "examples": [
            "carlos.angulo.mascarell@outlook.com"
          ],
          "pattern": "^.*$"
        },
        "name": {
          "$id": "#root/gitTargets/name",
          "title": "Name",
          "type": "string",
          "default": "",
          "examples": [
            "cangulo.cicd"
          ],
          "pattern": "^.*$"
        }
      }
    }
  },
  "additionalProperties": false
}